			<ul>
				<?php foreach($arrBannerSlider as $item): ?>
					<?php if($item->banner_image != ''): ?>
						<?php $rand_item = $rands[array_rand($rands, 1)]; ?>
						<li>
							<a href="#<?php echo $rand_item; ?>" <?php if($item->banner_is_rel == CGlobal::LINK_NOFOLLOW): ?> rel="nofollow" <?php endif; ?> title="<?php echo $item->banner_name; ?>">
								<img class="<?php echo $rand_item; ?>" src="<?php echo ThumbImg::thumbImageBannerNormal($item->banner_id,$item->banner_parent_id, $item->banner_image, CGlobal::sizeImage_1000,CGlobal::sizeImage_200, $item->banner_name,true,true); ?>" alt="<?php echo $item->banner_name; ?>" />
							</a>
						</li>
					<?php endif; ?>
